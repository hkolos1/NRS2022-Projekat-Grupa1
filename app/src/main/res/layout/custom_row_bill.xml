<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:id="@+id/rowLayoutBill">

    <TextView
        android:id="@+id/prNameBill"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:fontFamily="monospace"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prQuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prNameBill" />

    <TextView
        android:id="@+id/prOnePrice"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="76dp"
        android:fontFamily="monospace"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/prTotal"
        app:layout_constraintStart_toEndOf="@+id/prQuan"
        app:layout_constraintTop_toBottomOf="@+id/prNameBill" />

    <TextView
        android:id="@+id/prTotal"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="monospace"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prNameBill" />

</androidx.constraintlayout.widget.ConstraintLayout>